# frozen_string_literal: true

source "https://rubygems.org"

git_source(:github) {|repo_name| "https://github.com/#{repo_name}" }

# DATE gem allows the manipulation of dates and times
gem 'date', '~> 2.0.0'

# DOTENV gem allows the creation of environment variables
gem 'dotenv', '~> 2.7.5'

# JSON gem to handle json files
gem 'json', '~> 2.2.0'

# NET gem to build HTTP requests
gem 'net', '~> 0.3.3'
